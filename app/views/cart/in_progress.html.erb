<div class="p-4">
    <div class="text-center pt-4 mb-2 ">
        <%= image_tag "banner_cart_buy_in_progress", class:"title-talla "%>
    </div>
    <%= render partial: 'title'%>
    <div class="mt-4">
         <div>
            <table class="table table-hover table-responsive-sm table-responsive-md table-responsive-lg">
                <thead class="thead-dark">
                    <tr class="table-header text-center">
                        <th scope="col">Numero de Orden</th>
                        <th scope="col">Tipo de Compra</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Modelo</th>
                        <th scope="col">Talla</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Precio</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="item_List_cart">
                    <%= render partial: "item", collection: @items %>
                </tbody>
            </table>
        <div>
    </div>
    <% if !@items.nil?%>
        <% if @items.length > 0%>
            <div class="p-3">
                <p id="in_progress_total" class="h1 d-inline ">TOTAL :<%=  @order.nil? ? " $ 0" : (number_to_currency(@order.total ,unit: '$', :precision => 0, format: "%u %n")) %></p>
            </div>
            <div class="d-inline" id="btn-in-progress">
                <%= link_to "$ COMPRAR", checkout_adress_sale_cart_path(@order), remote: true, class:"btn btn-warning btn-lg btn-block",data: {confirm:"Por favor, revisar su lista de productos antes de Continuar",disable_with: "Procesando..."} %>
                <%= link_to "CANCELAR COMPRA",  cancel_sale_cart_path(@order), remote: true ,class:"btn btn-danger btn-lg btn-block", data: {confirm:"Â¿Seguro de Cancelar la Compra?",disable_with: "Procesando..."} %>
            </div>
        <% else %>
            <div>
                <h5 class="text-center">Carro vacio...<h5>
            </div>
        <% end %>
    <% else %>
        <div>
                <h5 class="text-center">Carro vacio...<h5>
            </div>
    <% end %>
</div>
    <!--Footer-->
    <div class="container-fluid bg-dark mt-2">

    
        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 py-5 text-center text-50 text-white  z-depth-1 rounded">

          <h5 class="">Jeans Lover Shop <i class="fa fa-heart text-danger mx-1"></i> Sitio Creado por Alvaro Rivas</h5>

        </section>

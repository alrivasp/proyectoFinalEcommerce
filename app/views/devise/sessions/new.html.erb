<div class="container pt-2">
  <h2 class="text-center"><%= t('.sign_in', :default => "Sign in") %></h2>
  <div class="form-group ml-5 mr-5 mb-2 pl-5 pr-5 form-devise">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.label :email, "Correo" %><br />
      <%= f.email_field :email, class:"form-control"%></div>
      <br/>
      <div><%= f.label :password %><br />
      <%= f.password_field :password, class:"form-control"%></div>
      
      <br/>
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit t('.sign_in', :default => "Sign in"), class:"btn btn-primary btn-lg btn-block" %></div>
    <% end %>
  </div>
  <div class="container text-center pb-2">
    <%= render "devise/shared/links" %>
  </div>
</div>

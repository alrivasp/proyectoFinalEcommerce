$("#item_List_cart").html("");
$('#numeric-cart').text("");
$("#item_List_cart").html(" <%= j render partial: 'item', collection: @items %>");

$("#in_progress_total").text("");
$("#in_progress_total").html('TOTAL :<%= number_to_currency( @order.total ,unit: '$', :precision => 0, format: "%u %n") %>');

    <% if current_user.orders.last.order_histories.last.order_status_id == 1 %>
        <% aux = current_user.orders.last.order_items.count %>
        $(document.createElement("span"))
                                        .addClass("badge badge-pill badge-danger accesos-iconos-badge")
                                        .html("<%= aux %>")
                                        .appendTo("#numeric-cart");
     <% end %>

$("#modalCartCompras").modal("hide");